// packages/frontend/project.json
{
  "name": "frontend",
  "projectType": "application",
  "sourceRoot": "packages/frontend/src",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "pnpm build",
        "cwd": "packages/frontend"
      },
      "configurations": {
        "development": {
          "command": "pnpm build:dev",
          "cwd": "packages/frontend"
        }
      }
    },
    "serve": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "pnpm dev",
        "cwd": "packages/frontend"
      }
    },
    "test:unit": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "packages/frontend/jest.config.ts",
        "passWithNoTests": true,
        "testMatch": ["**/src/**/*.test.{ts,tsx}"]
      }
    },
    "test:integration": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "packages/frontend/jest.config.ts",
        "passWithNoTests": true,
        "testMatch": ["**/src/tests/integration/**/*.test.{ts,tsx}"]
      }
    },
    "test:ui": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "wdio run wdio.conf.js",
        "cwd": "packages/frontend"
      },
      "dependsOn": [
        {
          "target": "serve",
          "projects": "self"
        }
      ]
    },
    "test:acceptance": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "packages/frontend/jest.config.ts",
        "passWithNoTests": true,
        "testMatch": ["**/src/tests/acceptance/**/*.test.{ts,tsx}"]
      }
    }
  }
}